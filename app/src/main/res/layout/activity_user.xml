<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bestread.app.bestread.User">

    <ImageView
        android:id="@+id/userpic"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/username"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="22dp"
        android:layout_height="100dp"
        android:layout_width="100dp" />

    <TextView
        android:text="username"
        android:layout_height="50dp"
        android:id="@+id/username"
        android:layout_width="150dp"
        android:layout_alignTop="@+id/userpic"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/userabout"
        android:layout_below="@+id/userpic"
        android:layout_marginTop="39dp"
        android:layout_height="50dp" />

    <TextView
        android:text="Friends Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_count_label"
        android:layout_below="@+id/userabout"
        android:layout_alignStart="@+id/userpic" />

    <TextView
        android:text="Reviews Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/friends_count_label"
        android:layout_alignStart="@+id/friends_count_label"
        android:layout_marginTop="31dp"
        android:id="@+id/textView7"
        android:layout_alignEnd="@+id/friends_count_label" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friends_count"
        android:layout_below="@+id/userabout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:id="@+id/reviews_count" />

    <TextView
        android:text="Last Active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="38dp"
        android:id="@+id/textView9"
        android:layout_alignEnd="@+id/textView7" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/reviews_count"
        android:id="@+id/last_active" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/last_active"
        android:id="@+id/joined"
        android:layout_alignTop="@+id/textView5" />
</RelativeLayout>
